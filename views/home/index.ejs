<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SoundPlex</title>
        <%- include('tags/links') %>
        <link rel="stylesheet" href="/stylesheets/home.css">
    </head>
<body>
    <!-- MAIN CONTENT -->
    <main id="index-one">

        <!-- PRELOADER -->
        <%- include('tags/preloader') %>
        <!-- HEADER -->
        <%- include('tags/header-nav') %>
        <!-- NAVIGATION CONTENT -->
        <%- include('tags/menu-content') %>
        <nav id="order">
            <div class="order hover">
            <i class="fi fi-sr-apps-sort"></i>
            </div>
        </nav>
        <section class="center" style="padding: 20px 0;">
            <div class="container-cards">
        
                <% products.forEach(product => { %>
                <div class="song fade-up card" title="<%= product.name %>, <%= product.price %>, <%= product.description %>">
                    
                    <div class="song-img" >                        
                        <% images.forEach(image => { %>
                            <% if (product.image_id === null) { %>
                                <img src="/images/headphone.png" alt="<%= image.description %>">
                            <% } else { %>
                                <% if (image.product_id === product.id) { %>
                                <img src="<%= image.url %>" alt="song">
                                <% } %>
                            <% } %>
                            
                        <% }); %>
                    </div>
        
                    <div class="song-details">
                        <div class="song-details-content">
                            <div class="song-name description"><%= product.name %></div>
                        </div>
                        <div class="desc">
                            <div class="download-song mouse btn-buy hover">
                                <a href="#"><i class="fi fi-sr-play"></i><%= product.price %>$</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </section>
    </main>
    
    <%- include('tags/footer') %>

</body>
</html>