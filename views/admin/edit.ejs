<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SoundPlex | Editar</title>
    <%- include('tags/links') %>
        <link rel="stylesheet" href="/stylesheets/home.css">
        <link rel="stylesheet" href="/stylesheets/admin.css">
</head>

<body>
    <!-- MAIN CONTENT -->
    <main id="index-one">

        <!-- PRELOADER -->
        <%- include('tags/preloader') %>
            <!-- HEADER -->
            <%- include('tags/header-nav') %>
                <!-- NAVIGATION CONTENT -->
                <%- include('tags/menu-content') %>

                    <form action="/admin/edit" method="post" class="container-products form-edit">                       
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <div>
                                    <label for="name">Nombre</label>
                                    <input type="text" name="name" value="<%= product.name %>" required>
                                </div>
                                <div>
                                    <label for="description">Descripción</label>
                                    <input type="text" name="description" value="<%= product.description %>" required>
                                </div>
                                <div>
                                    <label for="model">Marca</label>
                                    <input type="text" name="model" value="<%= product.model %>" required>
                                </div>
                                <div>
                                    <label for="count">Cantidad</label>
                                    <input type="number" name="count" value="<%= product.count %>" min="1" max="999" required>
                                </div>
                                <div>
                                    <label for="price">Precio</label>
                                    <input type="text" name="price" value="<%= product.price %>" pattern="^\d+(\.\d{2})?$" placeholder="0.00" required>
                                </div>
                                <div>
                                    <label for="code">Código</label>
                                    <input type="text" name="code" value="<%= product.code %>" pattern="^\d+" maxlength="6" minlength="4" required>
                                </div>
                            
                                <div>
                                    <label for="image">Imágenes</label>
                                    <div>
                                        <% images.forEach(image=> { %>
                                            <img src="<%= image.url %>" alt="image.description" srcset="">
                                        <% }); %>
                                    </div>
                                </div>
                                <div>
                                    <label for="category">Categoría</label>
                                    <select id="category" required>
                                        <% categories.forEach(category=> { %>
                                            <option value="<%= category.id %>"><%= category.name %></option>
                                        <% }); %>
                                    </select>
                                    <input type="hidden" name="category" id="category_id" value="">
                                </div>                                                                
                            <div>
                                <input class="mouse" type="submit" value="Editar">
                            </div>
                    </form>

    </main>

    <%- include('tags/footer') %>

</body>

</html>